##########################
# Aliases
##########################
# Modify Commands
alias more='less'
alias nano='nano -w'
alias ping='ping -c 5'
alias ..='cd ..'
alias df='df -h'
alias du='du -c -h'

alias lr='ls -R'
alias ll='ls -l'
alias la='ls -A'
alias lla='ll -A'
alias lx='ll -BX' # Sort by extension
alias lz='ll -rS' # Sort by size
alias lm='la | more'

# Color aliases
if command -V dircolors >/dev/null 2>&1; then
   eval "$(dircolors -b)"
   # Only alias ls colors if dircolors is installed
   alias ls="ls --color=auto"
   alias dir="dir --color=auto"
   alias vdir="vdir --color=auto"
fi
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"
alias less="less -R"

alias vim='nvim'

# New Commands
alias da='date "+%A, %B %d %Y [%T]"'
alias du1='du --max-depth=1'
alias hist='history|grep'
alias openports='netstat --all --numeric --programs --inet --inet6'
alias psg='ps -Af |grep $1'

alias gs='git status'

alias apps='pacman -Ss'

alias tel='telegram-cli'

# For XDG compatibility
#alias ncmpcpp='ncmpcpp -c "$XDG_CONFIG_HOME"/ncmpcpp'
alias tmux='tmux -f "$XDG_CONFIG_HOME"/tmux/tmux.conf'
alias mpdscribble='mpdscribble --conf $XDG_CONFIG_HOME/mpdscribble/mpdscribble.conf'
alias mus='ncmpcpp'
alias weechat='weechat -d $XDG_CONFIG_HOME/weechat'
alias mutt='mutt -F "$XDG_CONFIG_HOME"/mutt/muttrc'



# Mounts

alias alexandria_mount="sshfs martin@192.168.1.50:/mnt/alexandria ~/remote/alexandria"
alias irulan_mount="sshfs martin@192.168.1.27:/ ~/remote/irulan"



#i3
alias mtm="i3-msg move workspace to output left"
alias i3lock="i3lock -c 333"

alias rofi="PATH=$PATH:~/bin rofi"

# Notes
alias notes="cd ~/syncthing/smalldocs/quicknotes"
#alias define="dict -d gcide"
#alias thes="dict -d moby-thesaurus"

alias thes='sdcv -u "Moby Thesaurus II"'
alias define="sdcv -u dictd_www.dict.org_gcide"

alias cower="cower -t $HOME/gitland/aur/"


#EOF


